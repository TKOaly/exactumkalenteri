---
import "@fontsource/open-sans";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="background"></div>
		<slot />
	</body>
</html>
<style>
	html,
	body {
		margin: 0;
		width: 100%;
		font-family: "Open Sans Condensed", "sans-serif";
		height: 100%;
		font-size: 1.1em;
	}

	.background {
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		z-index: -1;
		height: 100vh;
		width: 100vw;
		position: fixed;
		background-size: cover;
		background-position: center;
		width: 100%;
		height: 100%;
		background-image: url("/exactum.jpeg");
	}
</style>

<style is:global>
	th {
		border-bottom: 3px solid #dbdbdb;
		padding: 0.25em;
		box-sizing: content-box;
	}

	td:first-child {
		padding-left: 0.5em;
		padding-right: 0.1em;
	}
	td:last-child {
		padding-right: 0.5em;
		padding-left: 0.1em;
	}
	table,
	td {
		border-collapse: collapse;
		border-bottom: 1px solid #dbdbdb;
		padding: 0.1em;
		background-color: white;
	}
	.table-wrap {
		margin: auto;
		width: fit-content;
		padding: 2em 1em;
		box-sizing: border-box;
	}
	tr {
		width: 100%;
	}
	tr div {
		margin: auto;
		width: fit-content;
	}
</style>
